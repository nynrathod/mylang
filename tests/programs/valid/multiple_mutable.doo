fn main() {
    let mut a = 1;
    let mut b = 2;
    let mut c = 3;

    print("Initial values:");
    print("a =", a, ", b =", b, ", c =", c);

    a += 10;
    b += 20;
    c += 30;

    print("After first updates:");
    print("a =", a, ", b =", b, ", c =", c);

    a *= 2;
    b *= 3;
    c *= 4;

    print("After multiplication:");
    print("a =", a, ", b =", b, ", c =", c);

    let mut total = a + b + c;
    print("Total:", total);

    total += 100;
    print("Total after adding 100:", total);

    for i in 0..5 {
        a += i;
        b -= i;
        c += 1;
    }

    print("After loop updates:");
    print("a =", a, ", b =", b, ", c =", c);
}
