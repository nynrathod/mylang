fn main() {
    let x = 10;
    print("Outer x:", x);

    if true {
        let x = 20;
        print("Inner x (shadowed):", x);
    }

    print("Outer x again:", x);

    for i in 0..3 {
        let x = i;
        print("Loop x:", x);
    }

    print("Final outer x:", x);

    let y = 100;
    if y > 50 {
        let y = 200;
        let z = y + 50;
        print("Inner y and z:", y, z);
    }

    print("Final y:", y);
}
