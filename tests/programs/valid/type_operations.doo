fn main() {
    let intval = 42;
    let strval = "The answer is ";

    print("Type operations test:");
    print(strval, intval);

    let a: Int = 100;
    let b: Int = 50;

    print("Integer operations:");
    print("a + b =", a + b);
    print("a - b =", a - b);
    print("a * b =", a * b);
    print("a / b =", a / b);

    let s1 = "Hello";
    let s2 = " ";
    let s3 = "Doo";

    print("String operations:");
    let greeting = s1 + s2 + s3;
    print(greeting);

    let numstr = "Number: ";
    let result = numstr + "123";
    print(result);

    let arr: [Int] = [1, 2, 3, 4, 5];
    print("Array operations:");
    for i in 0..5 {
        let elem = arr[i];
        let msg = "Element ";
        print(msg, i, " = ", elem);
    }
}
