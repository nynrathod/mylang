import core::math::Add;
import core::math::Multiply;
import core::math::Square;

fn Calculate(op: Int, a: Int, b: Int) -> Int {
    if op == 1 {
        return Add(a, b);
    }
    if op == 2 {
        return Multiply(a, b);
    }
    if op == 3 {
        return Square(a);
    }
    return 0;
}

fn DoubleAdd(a: Int, b: Int, c: Int) -> Int {
    let temp = Add(a, b);
    return Add(temp, c);
}

fn SquareSum(a: Int, b: Int) -> Int {
    let sum = Add(a, b);
    return Square(sum);
}

fn MultiplyThenAdd(a: Int, b: Int, c: Int) -> Int {
    let product = Multiply(a, b);
    return Add(product, c);
}
